<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane fx:id="dialogPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.ubu.lsi.ubumonitorlauncher.controller.DownloadConfirmationController">
	<content>
		<VBox spacing="20.0">
			<children>
      		<Label text="%label.updateavailable" textAlignment="CENTER">
      			<font>
      				<Font name="System Bold" size="24.0" />
      			</font>
      		</Label>
				<Label fx:id="label" text="%label.versionUpdate" wrapText="true">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
				<CheckBox fx:id="checkBox" mnemonicParsing="false" text="%checkBox.dontshowagain" />
			</children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
         </padding>
		</VBox>
	</content>
	<buttonTypes>
		<ButtonType fx:constant="OK" />
		<ButtonType fx:constant="CANCEL" />
	</buttonTypes>
   <header>
      <ImageView fitHeight="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/titulo.png" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
   </header>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</DialogPane>
